{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/python/stats.py",
      "use": "@vercel/python@3.1.0",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "installCommand": "pip install --no-index --find-links=api/python/wheels nba_api==1.4.1 pandas==2.1.4 numpy==1.26.3 requests==2.31.0 python-dotenv==1.0.0",
        "memory": 1024,
        "maxDuration": 10
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/python/stats",
      "dest": "/api/python/stats.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/vercel/path0"
  }
}
