{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && next build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "builds": [
    {
      "src": "app/nba_stats.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/stats",
      "dest": "app/nba_stats.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
